3. public class Main {
    public static void main(String[] args) {
        // 1. Рассчитать расстояние, проходимое светом (книга).
        long lightspeed = 300_000; // км/сек
        long seconds = 24 * 60 * 60; // количество секунд в сутках
        long distance = lightspeed * seconds;
        System.out.println("1) Свет проходит за день: " + distance + " км");

        // 2. Вычислить площадь круга (книга)
        double radius = 10.0;
        double circleArea = Math.PI * radius * radius;
        System.out.println("2) Площадь круга: " + circleArea);

        // 3. Инкрементируй как число в цикле(от 1 - 200) тип char. Выведи содержимое в консоль
        System.out.println("3) Инкремент char от 1 до 200:");
        for (char c = 1; c <= 200; c++) {
            System.out.print(c + " ");
        }
        System.out.println();

        // 4. Инцииализируй строку из 10 слов и перенеси каждое слово с новой строки (используя \n)
        String text = "Java\nэто\nсила\nпитон\nэто\nмогила\nи\nЖэка\nбудет\nрад";
        System.out.println("4) Строка с переносами:");
        System.out.println(text);

        // 5. Объяви в одной строке 3 переменные типа int, далее по одной инициализируй их.
        int x = 1, y = 2, z = 3;
        System.out.println("5) Переменные: x=" + x + " y=" + y + " z=" + z);

        // 6. Объяви переменную а и b сразу проинициализируй их. Объяви переменную с и присвой ей значение a * b. выведи на экран
        int a = 5, b = 7;
        int c = a * b;
        System.out.println("6) a * b = " + c);

        // 7. Объяви переменную в блоке иинициализируй её. Попробуй обратиться к ней за блоком, например, выведя на экран значение
        {
            int blockVar = 42;
            System.out.println("7) Переменная внутри блока: " + blockVar);
        }
        // Следующая строка вызовет ошибку компиляции, если раскомментировать
        // System.out.println(blockVar);

        // 8. Создай массив из 5 элементов и инициализируй каждый элемент любым значением. Выведи все значения в консоль
        int[] arr = new int[5];
        arr[0] = 10;
        arr[1] = 20;
        arr[2] = 30;
        arr[3] = 40;
        arr[4] = 50;
        System.out.println("8) Массив arr:");
        for (int value : arr) {
            System.out.print(value + " ");
        }
        System.out.println();

        // 9. Создай массив и проинициализиуй при помощи {}. (5 элементов типа String) Выведи в консоль
        String[] words = {"Жека", "топчик", "я", "бездарь", "хнык"};
        System.out.println("9) Массив слов:");
        for (String word : words) {
            System.out.println(word);
        }

        // 10. Создай многомерный массив. Попробуй его инициализировать (*)
        int[][] matrix = {
                {1, 2, 3},
                {4, 5, 6},
                {7, 8, 9}
        };
        System.out.println("10) Многомерный массив:");
        for (int i = 0; i < matrix.length; i++) {
            for (int j = 0; j < matrix[i].length; j++) {
                System.out.print(matrix[i][j] + " ");
            }
            System.out.println();
        }

        // 11. Реализуй несколько формул. Вычисление расстояния, закон архимеда, mv2/2
        double s = 100; // расстояние
        double t = 20;  // время
        double v = s / t; // скорость
        System.out.println("11.1) Скорость = " + v);

        double rho = 1000; // плотность воды
        double g = 9.8;
        double volume = 0.5; // объем
        double fa = rho * g * volume; // сила Архимеда
        System.out.println("11.2) Сила Архимеда = " + fa);

        double mass = 50;
        double vel = 10;
        double energy = 0.5 * mass * vel * vel;
        System.out.println("11.3) Кинетическая энергия = " + energy);
    }
}
--------------------------------------------------------
4
Вывести числа от 1 до 10 с помощью for.

Вывести числа от 10 до 1 с помощью while.

Вывести таблицу умножения на 5.

Посчитать сумму чисел от 1 до 100.

Посчитать произведение чисел от 1 до 10.

Считать число и вывести все числа от 1 до него.

Считать число и вывести его делители.

Считать число и вывести факториал.

Считать число и проверить, простое ли оно.

Считать число и вывести все его цифры по одной.
------------------------------------------------------
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // 1. Вывести числа от 1 до 10 с помощью for.
        System.out.println("1) Числа от 1 до 10:");
        for (int i = 1; i <= 10; i++) {
            System.out.print(i + " ");
        }
        System.out.println();

        // 2. Вывести числа от 10 до 1 с помощью while.
        System.out.println("2) Числа от 10 до 1:");
        int j = 10;
        while (j >= 1) {
            System.out.print(j + " ");
            j--;
        }
        System.out.println();

        // 3. Вывести таблицу умножения на 5.
        System.out.println("3) Таблица умножения на 5:");
        for (int i = 1; i <= 10; i++) {
            System.out.println("5 x " + i + " = " + (5 * i));
        }

        // 4. Посчитать сумму чисел от 1 до 100.
        int sum = 0;
        for (int i = 1; i <= 100; i++) {
            sum += i;
        }
        System.out.println("4) Сумма чисел от 1 до 100 = " + sum);

        // 5. Посчитать произведение чисел от 1 до 10.
        long product = 1;
        for (int i = 1; i <= 10; i++) {
            product *= i;
        }
        System.out.println("5) Произведение чисел от 1 до 10 = " + product);

        // 6. Считать число и вывести все числа от 1 до него.
        System.out.print("6) Введите число: ");
        int n = scanner.nextInt();
        System.out.println("Числа от 1 до " + n + ":");
        for (int i = 1; i <= n; i++) {
            System.out.print(i + " ");
        }
        System.out.println();

        // 7. Считать число и вывести его делители.
        System.out.print("7) Введите число для делителей: ");
        int num = scanner.nextInt();
        System.out.print("Делители числа " + num + ": ");
        for (int i = 1; i <= num; i++) {
            if (num % i == 0) {
                System.out.print(i + " ");
            }
        }
        System.out.println();

        // 8. Считать число и вывести факториал.
        System.out.print("8) Введите число для факториала: ");
        int factNum = scanner.nextInt();
        long factorial = 1;
        for (int i = 1; i <= factNum; i++) {
            factorial *= i;
        }
        System.out.println("Факториал числа " + factNum + " = " + factorial);

        // 9. Считать число и проверить, простое ли оно.
        System.out.print("9) Введите число для проверки простоты: ");
        int primeNum = scanner.nextInt();
        boolean isPrime = true;
        if (primeNum <= 1) {
            isPrime = false;
        } else {
            for (int i = 2; i <= Math.sqrt(primeNum); i++) {
                if (primeNum % i == 0) {
                    isPrime = false;
                    break;
                }
            }
        }
        if (isPrime) {
            System.out.println(primeNum + " — простое число");
        } else {
            System.out.println(primeNum + " — составное число");
        }

        // 10. Считать число и вывести все его цифры по одной.
        System.out.print("10) Введите число: ");
        int digitsNum = scanner.nextInt();
        System.out.println("Цифры числа:");
        String strNum = String.valueOf(digitsNum);
        for (int i = 0; i < strNum.length(); i++) {
            System.out.println(strNum.charAt(i));
        }

        scanner.close();
    }
}
--------------------------------------------------------
Создать массив из 5 чисел и вывести все элементы.

Найти минимальное число в массиве.

Найти максимальное число в массиве.

Посчитать сумму всех элементов массива.

Посчитать среднее значение элементов массива.

Считать число и проверить, есть ли оно в массиве.

Развернуть массив задом наперёд.

Посчитать количество чётных элементов в массиве.

Отсортировать массив пузырьком.

Объединить два массива в один.
--------------------------------------------------------

import java.util.Arrays;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // 1. Создать массив из 5 чисел и вывести все элементы.
        int[] arr = {12, 5, 7, 20, 3};
        System.out.println("1) Массив:");
        for (int num : arr) {
            System.out.print(num + " ");
        }
        System.out.println();

        // 2. Найти минимальное число в массиве.
        int min = arr[0];
        for (int num : arr) {
            if (num < min) {
                min = num;
            }
        }
        System.out.println("2) Минимальное число: " + min);

        // 3. Найти максимальное число в массиве.
        int max = arr[0];
        for (int num : arr) {
            if (num > max) {
                max = num;
            }
        }
        System.out.println("3) Максимальное число: " + max);

        // 4. Посчитать сумму всех элементов массива.
        int sum = 0;
        for (int num : arr) {
            sum += num;
        }
        System.out.println("4) Сумма элементов массива: " + sum);

        // 5. Посчитать среднее значение элементов массива.
        double average = (double) sum / arr.length;
        System.out.println("5) Среднее значение: " + average);

        // 6. Считать число и проверить, есть ли оно в массиве.
        System.out.print("6) Введите число для поиска: ");
        int search = scanner.nextInt();
        boolean found = false;
        for (int num : arr) {
            if (num == search) {
                found = true;
                break;
            }
        }
        if (found) {
            System.out.println("Число " + search + " найдено в массиве");
        } else {
            System.out.println("Число " + search + " не найдено в массиве");
        }

        // 7. Развернуть массив задом наперёд.
        System.out.println("7) Разворот массива:");
        for (int i = arr.length - 1; i >= 0; i--) {
            System.out.print(arr[i] + " ");
        }
        System.out.println();

        // 8. Посчитать количество чётных элементов в массиве.
        int evenCount = 0;
        for (int num : arr) {
            if (num % 2 == 0) {
                evenCount++;
            }
        }
        System.out.println("8) Количество чётных элементов: " + evenCount);

        // 9. Отсортировать массив пузырьком.
        int[] bubbleArr = Arrays.copyOf(arr, arr.length); // копия массива
        for (int i = 0; i < bubbleArr.length - 1; i++) {
            for (int j = 0; j < bubbleArr.length - 1 - i; j++) {
                if (bubbleArr[j] > bubbleArr[j + 1]) {
                    int temp = bubbleArr[j];
                    bubbleArr[j] = bubbleArr[j + 1];
                    bubbleArr[j + 1] = temp;
                }
            }
        }
        System.out.println("9) Отсортированный массив:");
        for (int num : bubbleArr) {
            System.out.print(num + " ");
        }
        System.out.println();

        // 10. Объединить два массива в один.
        int[] arr2 = {100, 200, 300};
        int[] merged = new int[arr.length + arr2.length];
        for (int i = 0; i < arr.length; i++) {
            merged[i] = arr[i];
        }
        for (int i = 0; i < arr2.length; i++) {
            merged[arr.length + i] = arr2[i];
        }
        System.out.println("10) Объединённый массив:");
        for (int num : merged) {
            System.out.print(num + " ");
        }
        System.out.println();

        scanner.close();
    }
}

